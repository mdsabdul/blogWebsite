<%-include("./partials/header")%>

  <div class=" px-10 w-full bg-green-100">
    <%-include("./partials/nav")%>

      <h1 class="text-4xl text-center py-8 px-8">Welcome to <span class="text-green-500">BLOG</span> Website</h1>
      <div class="flex flex-col gap-4">
        <%blogs.forEach((item)=>{%>
          <div class="w-full   py-5 my-5 ">
         
            <img class="h-[40vh] w-[50%] object-cover rounded-[.5vw]" src="<%=item.image%>" alt="">
            <h1 class="text-2xl font-semibold  py-4 px-3 capitalize">
              <%=item.title%>
            </h1>
            <p class="text-[1.2vw] py-4 capitalize px-3"><span class="font-semibold">Description </span>:-
              <%=item.description%>
            </p>
            <a class="ms-5 px-4 bg-green-700 rounded text-white py-2" href="/users/updateblogs/<%=item._id%>">Update</a>
            <form class="mt-5" action="/users/comment/<%=item._id%>" method="post">
              <h1 class="">Add Comments</h1>
              <div class="flex">
                <input type="text" class="px-5 py-2 rounded" name="title" placeholder="comments">
                <button class="bg-green-700 px-4 text-white rounded">Submit</button>
              </div>
            </form>

            <div class="w-full bg-white mt-2 h-[7vw] overflow-y-auto rounded ">
              <div class="items-center gap-4 p-5">

                <% item.comments.forEach((comment)=>{%>
                  <div class="flex gap-2 items-center mb-2">
                    <div class="h-[3vw] w-[3vw] bg-red-400 rounded-full overflow-hidden">
                      <img class="" src="<%=comment.createdby.profile%>" alt="">
                    </div>
                    <h4>
                      <%=comment.title%>
                    </h4>
                  </div>

                  <%})%>

              </div>
            </div>

            <%})%>
              <hr>


          </div>
      </div>
      <%-include("./partials/footer")%>